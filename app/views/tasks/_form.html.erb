<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :details %>
    <%= form.text_field :details %>
  </div>
  <div class="field">
  <%= form.label :start %>
  <%= form.date_select :startdate %>
</div>
<div class="field">
  <%= form.label :deadline %>
  <%= form.date_select :enddate %>
</div>
<div class="field">
   <p><%= form.label :Priority %>
     <%= form.radio_button :priority, 'low' %> low  <%= form.radio_button :priority, 'medium' %> medium <%= form.radio_button :priority, 'high' %> high<br />
   </p>
 </div>
<div class="field">
 <p><%= form.label :Status %>
   <%= form.radio_button :status, 'Not_started' %> Not_started  <%= form.radio_button :status, 'Undertaking' %> Undertaking <%= form.radio_button :statuses, 'Completed' %> Completed<br />
 </p>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
