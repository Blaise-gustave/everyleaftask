<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
<div class="container">
    <div class="card card-login mx-auto text-center bg-dark">
        <div class="card-header mx-auto bg-dark">
            <span> <h3 class="w-75">Everyleaf</h3></span><br/>
            <span class="logo_title mt-5"> Login Dashboard </span>
        </div>
        <div class="card-body">
            <form action="" method="post">
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <%= f.email_field :email, class: "form-control", placeholder:"Username" %>
                </div>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <%= f.password_field :password, class: "form-control", placeholder:"Password" %>
                </div>
                <div class="form-group">
                    <%= f.submit "Log in", class: "btn btn-outline-danger float-right login_btn" %><br><br>
                    <p style="color:#fff;">Click Here For Sign Up <%= link_to 'Sign Up', new_user_path %></p>
                </div>
            </form>
        </div>
    </div>
</div>
<% end %>